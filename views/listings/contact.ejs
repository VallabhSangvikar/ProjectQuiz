<% layout("layouts/boilerplate")%>
<style>
    main {
 max-width: 1200px;
 margin: 0 auto;
 padding: 40px 20px;
}

.contact-section {
 margin-bottom: 60px;
}

.contact-section h2 {
 font-size: 28px;
 margin-bottom: 30px;
}

.contact-content {
 display: flex;
 gap: 40px;
}

.contact-form {
 flex-grow: 1;
 background-color: #f5f5f5;
 border-radius: 10px;
 box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
 padding: 30px;
}

.form-group {
 margin-bottom: 20px;
}

.form-group label {
 display: block;
 font-weight: bold;
 margin-bottom: 5px;
}

.form-group input,
.form-group textarea {
 width: 100%;
 padding: 10px;
 border: 1px solid #ccc;
 border-radius: 5px;
 font-size: 16px;
}

.cta-button {
 display: inline-block;
 background-color: #007bff;
 color: #fff;
 padding: 10px 20px;
 border-radius: 5px;
 font-weight: bold;
 border: none;
 cursor: pointer;
}

.contact-info {
 flex: 0 0 300px;
 background-color: #f5f5f5;
 border-radius: 10px;
 box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
 padding: 30px;
}

.contact-info h3 {
 font-size: 20px;
 margin-bottom: 15px;
}

.contact-info ul {
 list-style-type: none;
 padding-left: 0;
}

.contact-info li {
 margin-bottom: 10px;
}
</style>
<main>
    <section class="contact-section">
      <h2>Get in Touch</h2>
      <div class="contact-content">
        <form class="contact-form">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
          </div>
          <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" required></textarea>
          </div>
          <button type="submit" class="cta-button">Send Message</button>
        </form>
        <div class="contact-info">
          <h3>Contact Information</h3>
          <ul>
            <li><strong>Address:</strong> 123 Main Street, City, State, ZIP</li>
            <li><strong>Phone:</strong> (123) 456-7890</li>
            <li><strong>Email:</strong> info@quizenthusiast.com</li>
          </ul>
        </div>
      </div>
    </section>
  </main>