<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="css/featuredquiz.css">
<body>
  <main>
    <section class="create-quiz-section">
      <!-- Quiz creation form -->
    </section>

    <section class="user-history">
      <h2>Your Quiz History</h2>
      <table>
        <thead>
          <tr>
            <th>Quiz Title</th>
            <th>Category</th>
            <th>Date Taken</th>
            <th>Score</th>
          </tr>
        </thead>
        <tbody>
          <!-- User's quiz history will be dynamically populated here -->
        </tbody>
      </table>
    </section>
  </main>

  <script>
    // Assuming you have an array of quiz history data
    const quizHistory = [
      { title: 'General Knowledge Quiz', category: 'Miscellaneous', date: 'April 15, 2024', score: '8/10' },
      { title: 'Science Trivia', category: 'Science', date: 'April 10, 2024', score: '6/10' },
      // Add more quiz history data
    ];

    const tableBody = document.querySelector('.user-history table tbody');

    quizHistory.forEach(quiz => {
      const row = document.createElement('tr');
      row.innerHTML = `
        <td>${quiz.title}</td>
        <td>${quiz.category}</td>
        <td>${quiz.date}</td>
        <td>${quiz.score}</td>
      `;
      tableBody.appendChild(row);
    });
  </script>
</body>