<% layout("layouts/boilerplate") %>
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: Arial, sans-serif;
    color: #333;
    line-height: 1.6;
  }

  /* Main content styles */
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  section {
    margin-bottom: 40px;
  }

  h2 {
    font-size: 24px;
    margin-bottom: 20px;
  }

  .user-history {
    margin-bottom: 60px;
  }

  .user-history h2 {
    font-size: 28px;
    margin-bottom: 30px;
  }

  .user-history table {
    width: 100%;
    border-collapse: collapse;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .user-history th,
  .user-history td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  .user-history th {
    background-color: #f2f2f2;
    font-weight: bold;
  }

  .user-history tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  .user-history tr:hover {
    background-color: #e6e6e6;
  }
</style>

<body>
  <main>
    <section class="create-quiz-section">
      <!-- Quiz creation form -->
    </section>

    <section class="user-history">
      <h2>Your Quiz History</h2>
      <table>
        <thead>
          <tr>
            <th>Quiz Title</th>
            <th>Category</th>
            <th>Date Taken</th>
            <th>Score</th>
          </tr>
        </thead>
        <tbody>
          <!-- User's quiz history will be dynamically populated here -->
        </tbody>
      </table>
    </section>
  </main>

  <script>
    // Assuming you have an array of quiz history data
    const quizHistory = [
      { title: 'General Knowledge Quiz', category: 'Miscellaneous', date: 'April 15, 2024', score: '8/10' },
      { title: 'Science Trivia', category: 'Science', date: 'April 10, 2024', score: '6/10' },
      // Add more quiz history data
    ];

    const tableBody = document.querySelector('.user-history table tbody');

    quizHistory.forEach(quiz => {
      const row = document.createElement('tr');
      row.innerHTML = `
        <td>${quiz.title}</td>
        <td>${quiz.category}</td>
        <td>${quiz.date}</td>
        <td>${quiz.score}</td>
      `;
      tableBody.appendChild(row);
    });
  </script>
</body>