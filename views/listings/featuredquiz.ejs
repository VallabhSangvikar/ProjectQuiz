<% layout("layouts/boilerplate")%>
  <style>
    /* Reset some default styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Global styles */
body {
  font-family: Arial, sans-serif;
  color: #333;
  line-height: 1.6;
}

a {
  text-decoration: none;
  color: #007bff;
}



/* Main content styles */
main {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
}

.featured-quizzes {
  margin-bottom: 40px;
}

.quiz-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  grid-gap: 20px;
}

.quiz-card {
  background-color: #f5f5f5;
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.quiz-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.quiz-card h3 {
  padding: 10px;
  font-size: 18px;
}

.quiz-card p {
  padding: 10px;
  font-size: 14px;
  flex-grow: 1;
}

.quiz-card .cta-button {
  display: inline-block;
  background-color: #007bff;
  color: #fff;
  padding: 10px 20px;
  border-radius: 5px;
  font-weight: bold;
  margin: 10px;
}
  </style>
<body>

  <main>
    <section class="featured-quizzes">
      <h2>Featured Quizzes</h2>
      <div class="quiz-grid">
        <div class="quiz-card">
          <img src="pop-culture.jpg" alt="Pop Culture Quiz">
          <h3>Pop Culture Quiz</h3>
          <p>Test your knowledge of movies, TV shows, music, and more!</p>
          <a href="#" class="cta-button">Take the Quiz</a>
        </div>
        <div class="quiz-card">
          <img src="history.jpg" alt="History Trivia">
          <h3>History Trivia</h3>
          <p>Explore fascinating facts from eras past.</p>
          <a href="#" class="cta-button">Take the Quiz</a>
        </div>
        <div class="quiz-card">
          <img src="brain-teasers.jpg" alt="Brain Teasers">
          <h3>Brain Teasers</h3>
          <p>Flex your mental muscles with mind-bending puzzles.</p>
          <a href="#" class="cta-button">Take the Quiz</a>
        </div>
        <div class="quiz-card">
          <img src="geography.jpg" alt="Travel the World">
          <h3>Travel the World</h3>
          <p>Journey across the globe with this geography quiz.</p>
          <a href="#" class="cta-button">Take the Quiz</a>
        </div>
      </div>
    </section>
  </main>
</body>
</html>