<% layout("layouts/boilerplate")%>
<link rel="stylesheet" href="css/category.css">
<body>
  <main>
    <div class="container">
      <h1>Choose a category</h1>
      <div class="search-bar">
        <input type="text" placeholder="Search for quizzes...">
      </div>
      <div class="category-list">
        <div class="category-row">
          <a href="#" class="category-item">Popular</a>
          <a href="#"  class="category-item">Trending</a>
          <a href="#"  class="category-item">New</a>
          <a href="#" class="category-item">Picks for you</a>
          <a href="#" class="category-item">Just for fun</a>
          <a href="#" class="category-item">Trivia</a>
          <a href="/quizlist/entertainment" class="category-item">Entertainment</a>
          <a href="/quizlist/geography" class="category-item">Geography</a>
          <a href="/quizlist/history" class="category-item">History</a>
        </div>
        <div class="category-row">
          <a href="/quizlist/science" class="category-item">Science</a>
          <a href="/quizlist/sports" class="category-item">Sport</a>
          <a href="/quizlist/math" class="category-item">Math</a>
        </div>
      </div>
      <h2>Daily Quizzes</h2>
      <div class="daily-quizzes">
        <div class="quiz-item">
          <img src="/images/category/Screenshot 2024-05-28 161341.png" alt="Animal Icons">
          <h3>Cute or Not?</h3>
          <p>7 questions. Are these animals cute or not?</p>
        </div>
        <div class="quiz-item">
          <img src="/images/category/Screenshot 2024-05-28 161359.png" alt="People Pleaser Quiz">
          <h3>Are You a People Pleaser?</h3>
          <p>10 questions. Are you a people pleaser?</p>
        </div>
      </div>
      <div class="featured-topics">
        <h2>Featured Topics</h2>
        <div class="topic-grid">
          <div class="topic-item">
            <img src="/images/category/Screenshot 2024-05-28 160133.png" alt="Harry Potter">
            <h3>Harry Potter</h3>
          </div>
          <div class="topic-item">
            <img src="/images/category/Screenshot 2024-05-28 160123.png" alt="Disney">
            <h3>Disney</h3>
          </div>
          <div class="topic-item">
            <img src="/images/category/Screenshot 2024-05-28 160114.png" alt="90s Trivia">
            <h3>90s Trivia</h3>
          </div>
          <div class="topic-item">
            <img src="/images/category/Screenshot 2024-05-28 160106.png" alt="Friends">
            <h3>Friends</h3>
          </div>
          <div class="topic-item">
            <img src="/images/category/Screenshot 2024-05-28 160056.png" alt="Marvel">
            <h3>Marvel</h3>
          </div>
          <div class="topic-item">
            <img src="/images/category/Screenshot 2024-05-28 160050.png" alt="Star Wars">
            <h3>Star Wars</h3>
          </div>
          <div class="topic-item">
            <img src="the-office.jpg" alt="The Office">
            <h3>The Office</h3>
          </div>
          <div class="topic-item">
            <img src="stranger-things.jpg" alt="Stranger Things">
            <h3>Stranger Things</h3>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
