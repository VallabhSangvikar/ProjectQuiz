<% layout("layouts/boilerplate")%>
<link rel="stylesheet" href="css/category.css">
<body>
  <main>
    <div class="container">
      <h1>Choose a category</h1>
      <div class="search-bar">
        <input type="text" placeholder="Search for quizzes...">
      </div>
      <div class="category-list">
        <h2>Categories</h2>
        <ul>
          <li>Popular</li>
          <li>Trending</li>
          <li>New</li>
          <li>Picks for you</li>
          <li>Just for fun</li>
          <li>Trivia</li>
          <li>Entertainment</li>
          <li>Geography</li>
          <li>History</li>
          <li>Science</li>
          <li>Sport</li>
          <li>Math</li>
        </ul>
      </div>
      <div class="daily-quizzes">
        <h2>Daily Quizzes</h2>
        <div class="quiz-item">
          <img src="/images/category/Screenshot 2024-05-28 161341.png" alt="Animal Icons">
          <h3>Cute or Not?</h3>
          <p>7 questions. Are these animals cute or not?</p>
        </div>
        <div class="quiz-item">
          <img src="/images/category/Screenshot 2024-05-28 161359.png" alt="People Pleaser Quiz">
          <h3>Are You a People Pleaser?</h3>
          <p>10 questions. Are you a people pleaser?</p>
        </div>
      </div>
      <div class="in-progress">
        <h2>In Progress</h2>
        <ul>
          <li>
            <img src="data:<%=quiz[0].image.contentType%>;base64,<%= quiz[0].image.data.toString("base64") %>" alt="People Pleaser Quiz">
            <div><%=quiz[0].quiztitle %></div>
            <div><button class="start">start</button></div>
          </li>
        </ul>
      </div>
      
    </div>
    <script src="/js/category.js"></script>
  </main>
</body>